# Environment variables for Pattern Miner

# Required
ANTHROPIC_API_KEY=sk-ant-xxxxx
GITHUB_TOKEN=ghp_xxxxx

# Optional - Dev-nexus integration
DEV_NEXUS_URL=https://dev-nexus-xxxxx-uc.a.run.app

# Optional - Discord/Slack notifications
WEBHOOK_URL=https://discord.com/api/webhooks/xxxxx

# For GCP deployment
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Service configuration
PORT=8081

# A2A Configuration
AGENT_URL=https://pattern-miner-xxxxxxxxx.a.run.app
PORT=8080
REQUIRE_AUTH=false
AUTH_TOKEN=

# Database Configuration (shared with dev-nexus PostgreSQL VM)
USE_DATABASE=true

# For local development (if you have SSH tunnel to VM)
# ssh -L 5432:localhost:5432 dev-nexus-vm
DATABASE_URL=postgresql://devnexus:password@localhost:5432/devnexus

# Or use individual parameters:
DB_HOST=localhost  # Use 10.8.0.2 when deployed on GCP
DB_PORT=5432
DB_NAME=devnexus
DB_USER=devnexus
DB_PASSWORD=your-password  # From POSTGRES_PASSWORD secret